generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  tasks    Task[]
}

enum Priority {
  High
  Medium
  Low
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  createdAt   DateTime @default(now())
  priority    Priority
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}
